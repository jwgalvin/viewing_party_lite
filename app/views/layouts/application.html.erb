<!DOCTYPE html>
<html>
  <head>
    <%= link_to "Home Page", "/", method: :get %>
    <% if user_logged_in %>
      <%= link_to "Log Out", "/logout"%>
    <% else %>
      <%=link_to "Log in", "/login" %>
      <% end %>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <br>  <% flash.each do |type, msg| %><br>
  <div>
    <%= msg %>
  </div>
  <%end %>
    <%= yield %>
  </body>
</html>
